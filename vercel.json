{
  "version": 2,
  "builds": [
    { 
      "src": "api/create_payment.js", /* Regra de build da API */
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/create_payment",
      "methods": [
        "POST",
        "OPTIONS"
      ],
      "dest": "/api/create_payment.js"
    },
    {
      "src": "/",
      "dest": "/index.html" /* Roteamento principal */
    },
    {
      "src": "/compra.html",
      "dest": "/compra.html"
    },
    {
      "src": "/agradecimento.html",
      "dest": "/agradecimento.html"
    },
    {
      "src": "/Painel ultima versao.html",
      "dest": "/Painel ultima versao.html"
    }
    /* Removendo a regra gen√©rica "/(.*)" para evitar conflito */
  ]
}